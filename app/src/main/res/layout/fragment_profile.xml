<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/app_bg_white"
    android:layout_margin="20dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/user_img"/>


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/text_main"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/userImage"/>

    <EditText
        android:id="@+id/edUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:hint="Enter Full Name"
        android:textColorHint="#6D6D6D"
        style="@style/editText"
        android:padding="10dp"
        android:textColor="@color/text_main"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/text_main"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edUserName"/>

    <EditText
        android:id="@+id/edUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserEmail"
        android:hint="Enter email address"
        android:textColorHint="#6D6D6D"
        style="@style/editText"
        android:padding="10dp"
        android:textColor="@color/text_main"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/tvUserPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/text_main"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edUserEmail"/>

    <EditText
        android:id="@+id/edUserPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserPhoneNo"
        android:hint="Phone Number"
        android:textColorHint="#6D6D6D"
        style="@style/editText"
        android:padding="10dp"
        android:textColor="@color/text_main"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:layout_marginTop="10dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update profile"
        android:background="@drawable/white_background"
        android:backgroundTint="@color/purple"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/edUserPhoneNo"
        android:layout_marginTop="40dp"/>
</RelativeLayout>